{
  "name": "chrome-jig",
  "version": "0.2.0",
  "description": "Chrome debugging REPL with CDP, script injection, and Claude skill support",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "cjig": "./bin/cjig.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/cli.ts",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src --ext .ts",
    "serve:examples": "pnpm exec serve examples -p 3333 -C"
  },
  "keywords": [
    "chrome",
    "devtools",
    "cdp",
    "debugging",
    "repl",
    "playwright"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "chokidar": "^5.0.0",
    "playwright-core": "^1.58.1",
    "squint-cljs": "^0.10.185"
  },
  "devDependencies": {
    "@types/node": "^25.1.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "packageManager": "pnpm@10.28.2",
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist",
    "bin",
    "editor",
    "SKILL.md",
    "README.md"
  ]
}
